<!--
  Launches gopher mind control.

  Eventually as part of the rapp
 -->
<launch>
  <arg name="go" default="false" doc="automate hooman interaction via the 'go' button." />

  <node name="mind_control" type="gopher_mind_control" pkg="gopher_behaviours">
    <remap from="mind_control/battery"           to="/gopher/status/battery"/>
    <remap from="mind_control/move_base/cancel"   to="/gopher/move_base/cancel"/>
    <remap from="mind_control/move_base/feedback" to="/gopher/move_base/feedback"/>
    <remap from="mind_control/move_base/goal"     to="/gopher/move_base/goal"/>
    <remap from="mind_control/move_base/result"   to="/gopher/move_base/result"/>
    <remap from="mind_control/move_base/status"   to="/gopher/move_base/status"/>
    <remap from="delivery/goal"                  to="/rocon/delivery/goal"/>
    <remap from="delivery/go"                    to="/gopher/buttons/go"/>
    <rosparam param="dont_wait_for_hoomans" subst_value="True">$(arg go)</rosparam>
  </node>
</launch>
